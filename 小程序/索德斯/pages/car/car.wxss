/* pages/car/car.wxss */
@import "../../utils/wxaSortPicker/wxaSortPicker.wxss";
@import "../index/index.wxss";
page{
  background: #fff;
  border-top:1px solid #ececec;
}
.topwrap{
  width: 95%;
  margin: 15rpx auto 0;
}
.tabwrap view{
  float: left;
   color: #7c7c7c;
   font-size: 16px;
   width: 23%;
  text-align: center;
  padding: 6px 10rpx;
  margin-right: 3%; 
}
.carnamewrap{
  height: 80rpx;
  line-height: 80rpx;
  padding-left:10rpx; 
  border-radius: 8rpx;
  font-size: 16px;
}
.carnamewrap text{
  color: #8e8e8e;
}
.inputwrap{
  margin-top: 0px;
  position: relative;
}
.vinwrap input{
  padding-left: 60rpx;
}
.inputwrap image{
  width: 50rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 16rpx;
}
.tabwrap .bg{
  background: #f7f7f7;
}
/*顶部*/
.slist{
  background:#f5f5f5;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  padding-right: 40rpx;
  position: relative;
  margin-right: 10rpx;

}
.slist image{
  position: absolute;
  right: 2px;
  top:50%;
  transform: translateY(-50%);
  width: 14px;
  height: 12px;
  white-space: nowrap; 
 text-overflow: ellipsis; 
  overflow: hidden;
}
.carwrap view{
  padding-left: 8rpx;
  white-space: nowrap; 
  text-overflow: ellipsis; 
  overflow:hidden;
  box-sizing: border-box;
}
.carwrap{
  width: 38%;
  border-radius: 40rpx 0 0 40rpx;
}
.cartypewrap{
  width: 38%
}
.yearwrap{
  width: 24%;
   border-radius:0 40rpx 40rpx 0;
}
.carnamewrap{
  border: 1px solid #0e2a7e;
  border-radius: 40rpx;
}
.fenleiwrap{
  background: #fff;
  color: #3d3d3f;
  font-size: 16px;
  padding: 0 10rpx 10rpx 10rpx;
  border-bottom: 1px solid #ececec;
}
.fenleiwrap .cplist{
  float: left;
  font-size: 16px;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  width: 32%;
  margin-top: 10rpx;
}
.flbg{
  color: #2c3a79;
  background: #e4e4e4;
}