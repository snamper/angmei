/* pages/inde/inde.wxss */
page{
  width: 100%;
  height: 100%;
}
.bg{
  position: absolute;
  height: calc(100% - 124rpx);
  width: 100%;
  top: 0;
  left: 0;
}
.bgwrap{
  height: 100%;
  overflow: hidden;
  background-size: 100%;
}
/*ocr*/
.ocr1{
  width: 350rpx;
  margin: 180rpx auto 50rpx;
  border-radius: 50%;
  background:rgba(253, 253, 253, 0.2); 
  height: 350rpx;
  padding: 30rpx;
  position: relative;
}
.ocr2{
   width:290rpx;
   height: 290rpx; 
   border-radius: 50%;
   padding: 30rpx;
   background:rgba(253, 253, 253, 0.4);   
}
.ocr3{
  width: 290rpx;
  height: 290rpx;
  border-radius: 50%;
  background:rgba(253, 253, 253, 0.6);  
  overflow: hidden;  
}
.ocr3 image{
  width: 80rpx;
  height: 70rpx;
  display:block;
  margin: 70rpx auto 20rpx;
}
.ocr3 .text{
  color: #184FEF;
  text-align: center;
  font-size: 16px;
}
/*手动搜索*/
.btn{
  width: 40%;
  font-size: 16px;
  background:rgba(253, 253, 253, 0.1);    
  border:1px solid #fff;
  color: #fff;
}