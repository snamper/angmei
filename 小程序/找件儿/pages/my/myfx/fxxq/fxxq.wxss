page{
  width: 100%;
   /* height: 100%;  */
  padding-bottom: 20px;
}
.boxshadow{
 font-size: 14px;
  margin-top:10px; 
}
.titlewrap{
  padding: 10px 0 5px 10px;
}
.titlewrap .title{
  color: #67A3E7;
}
.titlewrap .title .titletext{
  color: #818182;
}
.titlewrap .vin{
  color: #A2A3A5;
}
.top{
  background: #ECC735;
  color: #FFF;
  text-align: center;
  height: 75rpx;
  line-height: 75rpx;
}
.top .numwrap,.top .pjlbwrap,.top .oewrap,.top .moneywrap{
  float: left;
}
.top .numwrap{
  width: 15%;
}
.top .oewrap{
  width: 30%;
}
.top .pjlbwrap{
  width: 30%;
}
.top .moneywrap{
  width: 25%;
}
.bottom .num,.bottom .pjlb,.bottom .oe,.bottom .money{
  float: left;
   display:flex;
  /* align-items:center; */
  justify-content:space-around;
  flex-direction:column;
  min-height: 90rpx;
}
.bottom .num{
  width: 15%;
}
.bottom .oe{
  width: 30%;
}
.bottom .pjlb{
  width: 30%;
}
.bottom .money{
  width: 25%;
}
.bottom{
  color: #818182;
  text-align: center;
  font-size: 14px;
}
.bottom view{
  border-bottom: 1px solid #EDEDED;
}
.bottom view:last-child{
  border-bottom: 0px solid #EDEDED;  
}
.canvas{
  position: absolute;
  top: 0;
  left: 0;
}
.btn{
  color:#fff;
  background:#329BDE;
  width: 60%;
  border-radius: 50rpx;
  margin-top: 20px;
}
