/* pages/my/my.wxss */
.userwrap{
   overflow:hidden;
   position: relative;
}
.userwrap .bg,.moneywrap .bg{
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}
.userimg{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  overflow:hidden;
  margin: 0 auto;
  margin-top: 20rpx;
  position: relative;
}
.userimg-img{
  width: 100%;
  height: 100%;
}
.username{
  text-align: center;
  margin-top: 10rpx;
  color: #fff;
  position: relative;
  padding-bottom:20rpx; 
}
/*余额*/
.moneywrap{
  width: 95%;
  margin: 20rpx auto;
  border-radius: 10rpx;
  box-shadow: 1px 1px 8px #ccc; 
  background-size:100% 100%; 
  box-sizing: border-box;
  position: relative;
}
.moneywrap>view{
  width: 33%;
  float: left;
  text-align: center;
  height: 160rpx;
  font-size: 16px;
  box-sizing: border-box;
  line-height: 60rpx;
  padding-top:20rpx; 
  position: relative;
}
.moneywrap view .money{
  color:#E7363E;
  font-size: 14px;
}
.content .ctt-children{
  margin-bottom:10rpx;
  font-size: 14px;
  padding:20rpx;
  position: relative;
  line-height: 32px;
}
.content .ctt-children .lxwo{
 float: right;
 position: absolute;
 right: 40PX;
 top: 50%;
 transform: translateY(-50%);
 color: #918D8D;
}
.content .ctt-children image{
  width: 55rpx;
  height: 55rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
