/* pages/my/opinion/opinion.wxss */
.wrap{
  margin: 20rpx auto 0;
  overflow: hidden;
}
.wrap textarea{
  width: 95%;
  margin: 20rpx auto 20rpx;
  font-size: 14px;
  padding: 20rpx;
  box-sizing: border-box;
  height: 200px;
}
button{
  width: 80%;
  background:#4A7BB7;
  color:#fff;
  position: fixed;
  bottom: 100rpx; 
  left: 50%;
  margin-left: -40%;
  border-radius: 30px;
}
.phont{
  font-size: 16px;
  padding: 10px;
  margin-top: 10px;
}
.phont view{
  height: 25px;
  line-height: 25px;
}
.phont text{
  color: #C7C7C7;
}
.phont .left,.phont .right{
   float: left;
}
.phont .left{
  color: #C7C7C7;
}
.phont input{
  display: inline-block;
}