/**index.wxss**/
page{
  height: 100%;
}
.wrap{
  height: 100%;
  position: relative;
}
.wrap .bgimage{
  width: 100%;
  height: 100%;
  position:absolute;
  top:0;
  left:0;
}
.wrap .logoimage{
  width: 80rpx;
  position:absolute;
  top:40rpx;
  right: 40rpx;
}
/*搜索框*/
.searchwrap{
  position: absolute;
  width: 100%;
  left:0;
  top:16%;
}
.tabwrap{
  width: 95%;
  margin-left: 3.5%;
  margin-bottom: 5px;
   color: #fff;
}
.tabwrap .tablist{
  float: left;
  font-size: 18px;
  text-align: center;
  padding: 6px 20rpx;
  margin-right: 3%;
  border-radius: 8rpx;
}
.tabwrap .tablist:last-child{
  margin-right: 0;
}
.swiperone{
  height: 100rpx;
}
.swiperone swiper-item{
  padding:0 2.5%;
  box-sizing: border-box;
}
.inputwrap{
  height: 80rpx;
  border-radius:8rpx;
  margin-top: 6rpx;
}
.inputwrap view,.inputwrap input{
  float:left;
  font-size: 16px;
}
.inputwrap .click,.inputwrap input{
  width: 75%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx 0 0 8rpx;
}
.inputwrap .click{
  color: #8e8e8e;
}
.inputwrap .btn{
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
   border-radius:0 8rpx 8rpx 0;
   font-weight: bold;
}
/*ocr*/
.ocrwrap{
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius:50%; 
  position: absolute;
  top: 40%;
  left: 50%;
  margin-left: -150rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.ocrwraptwo{
   background: rgba(2255, 255, 255, 0.5); 
   border-radius:50%; 
   width: 260rpx;
   height: 260rpx;
   padding: 20rpx;
   box-sizing: border-box;
}
.ocr{
  background: rgba(2255, 255, 255, 0.9); 
   border-radius:50%; 
   width: 220rpx;
   height: 220rpx;
   overflow: hidden;
}
.ocr image{
  width: 30%;
  display: block;
  margin: 50rpx auto 26rpx;
}
.ocr .text{
  text-align: center;
  font-size: 32rpx;
}
/*产品展示*/
.swiperClass{
  position: absolute;
  z-index:100;
  bottom:7%;
  width: 100%;
  height: 260rpx;
}
.swiperClass .list{
  width: 90%;
  margin-left: 5%;
  height:260rpx; 
  display: inline-block;
  border-radius: 5px;
  box-shadow: 1px 1px solid #ccc;
  background: #FFF;
} 
.list .imagewrap{
  height: 80%;
  border-radius:5px 5px 0 0; 
  background: #fff;
  display: flex;
}
.imagewrap image{
  width: 40%;
  max-height: 100%;
  margin-left: 30%;
}
.list .title{
  height: 20%;
  text-align:center;
  color: #fff;
  border-radius:0 0 5px 5px; 
  font-size: 16px;
}
.callwrap{
  position: absolute;
  bottom: 4%;
  width: 100%;
  text-align: center;
  color: #FFF;
  font-size: 14px;
}
.callwrap text{
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
}